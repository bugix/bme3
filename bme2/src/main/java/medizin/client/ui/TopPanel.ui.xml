<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="uiStyles" type="medizin.client.style.resources.UiStyles"/>
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
	</ui:style>
	<g:HTMLPanel styleName="{uiStyles.uiCss.backgroundRegular}">
			<g:HorizontalPanel spacing="4" verticalAlignment="middle">
				<g:ValueListBox ui:field="loggedUser"></g:ValueListBox>
				<g:ValueListBox ui:field="institutionListBox"></g:ValueListBox>
				<g:Label ui:field="languageLbl"></g:Label>
				<g:ValueListBox ui:field="languageListBox"></g:ValueListBox>
				<g:Label ui:field="recordViewLbl"></g:Label>
				<g:ValueListBox ui:field="recordViewListBox"></g:ValueListBox>
			</g:HorizontalPanel>
			<div id="userLoggedIn"></div>
			<div id="institutionActive"></div>	
		</g:HTMLPanel>
</ui:UiBinder>