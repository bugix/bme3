<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gwtgraphics="urn:import:org.vaadin.gwtgraphics.client">
	<ui:style>
		.imageBox {
			overflow: auto;
			max-height: 500px;
			width: 500px;
			
		}
		.altText {
			font-weight: bold;
			font-size: large;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.imageBox}">
		
		<g:VerticalPanel>
			<!-- <gwtgraphics:DrawingArea ui:field="drawingArea"></gwtgraphics:DrawingArea> -->
			<g:Image ui:field="image" styleName="{style.altText}"></g:Image>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 