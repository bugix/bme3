	<ui:style src="../../styles.css">
		.standardTable input {
			width: 100%;
			opacity: 0.8;
		}
		
		.popupPanel {
			margin: 6px 6px;
		}
		
		.popupCheckboxes {
			width: 135px;
		}
		
		.noOutline {
			outline-style: none;
			overflow: hidden;
		}
		
		.floatRight {
			float: right;
		}
		
		.complexity {
			padding-right: 10px;
		}
		
		.text {
			padding-right: 10px;
		}
		
		.Author {
			padding-right: 37px;
		}
		
		.Reviewer {
			padding-right: 23px;
		}
		
		.Specification {
			padding-right: 6px;
		}
		
		.StudyYear {
			padding-right: 65px;
		}
		
		.Keywordlbl {
			padding-right: 28px;
		}
		
		.startDatelbl {
			padding-right: 20px;
		}
		
		.endDateLbl {
			padding-right: 27px;
		}
		
		.labelSize {
			width: 115px;
			vertical-align: middle;
		}
		.labelVertical {
			vertical-align: middle;
		}
		
		<!-- .horizontal -->
	</ui:style>
