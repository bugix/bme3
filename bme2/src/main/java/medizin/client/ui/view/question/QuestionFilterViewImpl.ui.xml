							</td>
						</tr>
						
						<tr>
							<td>
							<g:Label addStyleNames="{style.labelSize}" text="{constants.createdDate}"></g:Label>
							
							</td>
							
							<td>
							<g:HorizontalPanel>
							<g:Label text="{constants.from}"  addStyleNames="{style.labelVertical}"></g:Label>
							<d:DateBox ui:field="createStartDate" ></d:DateBox>
							<g:Label text="{constants.to}" addStyleNames="{style.labelVertical}"></g:Label>
							<d:DateBox ui:field="createEndDate"></d:DateBox>
							</g:HorizontalPanel>
							</td>
						</tr>
						
