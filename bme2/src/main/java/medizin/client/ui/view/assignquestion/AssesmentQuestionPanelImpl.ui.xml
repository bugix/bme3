	<ui:style src="../../styles.css">
	.displayPanel{
		
		/*background-color: #E6D8F2 ;*/
		
		/*padding: 5px;*/
		position: absolute; 
		width: 100%; 
		min-height: 100px;
border-left: 1px solid #AAAAAA;
    border-right: 1px solid #AAAAAA;
border-bottom: 1px solid #AAAAAA;

	}
	
.min-height
{
	min-height: 100px;
}
	

		.maxWidth{
		width: 100%;

		}
	
	 .float-right
	{
		float:right;
		 margin-right: 10px;
