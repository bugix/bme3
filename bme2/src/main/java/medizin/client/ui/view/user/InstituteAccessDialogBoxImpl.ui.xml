<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:medizin.client.ui.widget">

	<ui:style src="../../styles.css">
		.panelHTML {
			border: 0px solid #ddf;
			height: 100%;
			width: 800px;
		}
		
		.controls {
			position: absolute;
			left: 0;
			right: 0;
			top: 9px;
			height: 2em;
			margin-left: 15px;
			margin-top: 25px;
			margin-right: 10px;
		}
		
		.controls table {
			position: absolute;
			right: 0;
			top: 0;
		}
		
		.controls button {
			display: inline;
		}
		
		.listView {
			position: relative;
		}
		
		.scroll1 {
			width: 100%;
		}
		
		.listView  &gt; table {
			table-layout: fixed;
		}
		
		.listView  &gt; table td {
			text-overflow: ellipsis;
			overflow: hidden;
			white-space: nowrap;
			cursor: pointer;
		}
		
		.barNew {
			padding: 3px;
			width: 100%;
		}
		
		.right {
			float: right;
			margin: 3px;
		}
		.displayRight {
			float: right;
			padding-left: 400px;			
		}
	</ui:style>
	<g:HTMLPanel>
		<!-- <div style="height:3em;" /> -->
		<g:HorizontalPanel>
			<g:TextBox ui:field="searchInstitute"></g:TextBox>		
			<b:SimplePager ui:field="pager" display="{tableEvent}" addStyleNames="{style.displayRight}"  />			
		</g:HorizontalPanel>
		
		<b:CellTable ui:field="tableEvent" addStyleNames="{style.standardTable}"
			width="100%" />
		<!-- <b:CellTable pageSize="8" ui:field="tableEvent" width="100%" /> -->

		<!-- <div class="{style.controls}"> -->
		<!-- <div>
			<b:SimplePager ui:field="pager" display="{tableEvent}" />
			<b:SimplePager display="{tableEvent}" location="RIGHT" />
		</div> -->

		<div style="height:3em;" />
		<div class="{style.barNew}">
			<my:IconButton ui:field="closeButton" icon="closethick"
				addStyleNames="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only {style.right}">Schliessen</my:IconButton>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 