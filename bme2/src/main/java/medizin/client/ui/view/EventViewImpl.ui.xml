<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:medizin.client.ui"
	xmlns:b="urn:import:com.google.gwt.user.cellview.client" xmlns:m="urn:import:medizin.client.ui.widget" xmlns:p="urn:import:medizin.client.ui.widget.pager">

	<ui:style src="../styles.css">
    .panelHTML {
       border: 0px solid #ddf;
       height: 100%;
       width: 98%;
     }
      .controls {
    position: absolute;
    left:0;
    right:0;
    top:3px;
    height: 2em;
    margin-left: 15px;
  }

  .controls table {
    position:absolute;
    right:0;
    top:0;
  }
  .controls button {
    display:inline;
  }
  .listView {
    position: relative;
  }
    .scroll1 {
    width: 100%;
  }
  .listView &gt; table {
    table-layout:fixed;
  }
  .listView &gt; table td {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    cursor: pointer;
  }
   table button {
    background: none;
  }
  .displayRight {
			/* float: right;*/ 
		/*	padding-left: 400px;*/
			padding-left: 60%;			
		}
		.paddingLeft{
		padding-right: 10px;	
	}
	</ui:style>
	
	<ui:with type="medizin.shared.i18n.BmeConstants" field="cc"></ui:with>
	
	<g:ScrollPanel>
				<g:HTMLPanel width="100%" >
						<!-- <div class="{style.controls} {style.controlsleft}"> -->
						
						<b:CellTable ui:field="tableEvent" addStyleNames="{style.standardTableIcon}"  />
						<!-- <div class="{style.controls} {style.controlsleft}"> -->
						
						<g:HorizontalPanel spacing="3">
						<g:TextBox ui:field="eventName" addStyleNames="{style.paddingLeft}" ></g:TextBox>
							
							<m:IconButton ui:field="addEvent" icon="plusthick" text="{cc.newTopic}"></m:IconButton>
							<p:MySimplePager ui:field="pager" display="{tableEvent}" addStyleNames="{style.displayRight}"></p:MySimplePager>
							<!-- <b:SimplePager ui:field="pager" display="{tableEvent}" addStyleNames="{style.displayRight}" /> -->
							</g:HorizontalPanel>
						<!-- </div> -->
					
				</g:HTMLPanel>
			</g:ScrollPanel>
			
			
			
