<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.google.gwt.user.cellview.client"
	xmlns:my="urn:import:medizin.client.ui.widget"
	xmlns:r="urn:import:medizin.client.ui.richtext">

	<ui:style src="../../styles.css">
		.panelStyle {
			width: 320px;
			height: 400px;
			border-width: thin;
			border-style: solid;
			padding: 0px;
			margin-top: 10px;
			margin-bottom: 5px;
			margin-left: 40px;
			border-radius:10px;
			-moz-border-radius: 4px;
			
		}
		
		.noOutline {
			outline-style: none;
			overflow: hidden;
		}
		
		.padleft5 {
			padding-left: 5px;
		}
		
		.standardTable input {
			width: 100%;
			opacity: 0.8;
		}
		
		.icon {
			float: right;
			margin: 4px;
			vertical-align: middle;
		}
		
		.icon:hover {
			cursor: pointer;
		}
		
		.maxWidth {
			margin-bottom: 8px;
			width: 680px;
		}
		
		.right {
			float: right;
		}
		
		.paddRight {
			float: right;
		}
		
		.left {
			float: left;
		}
		
		.popupStyle {
			width: 900px;
			height: 610px;
			border-width: 2px;
			border-color: #676767;
			border-style: solid;
			border-radius:10px;
		}
		
		.buttonStyle {
			margin-top: 6px;
			margin-right: 10px;
			width: 140px;
		}
		
		.contentPanelStyle {
			
			padding: 0px;
			margin: 20px;
			-moz-border-radius: 4px;
		}
		
		.toolbar{
			border: 0px solid #AAA;
			padding: 0px;
			margin-bottom: 5px;
		}
		.closeButton{
	
		position:absolute;
		top:-10px;
		right: -10px;
		border-radius:7px;
		border-color: #676767;
		border-width: 2px; 
		}
		.right{
			float:right;
		}
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.popupStyle}">
		<div style="height: 20px;
					padding: 10px;
					background-color: #D2AE50;
					font-size: x-large;
					font-family: sans-serif;
					vertical-align: middle; 
					color: black;">
			<span ui:field="mailTemplate"></span>
			
				<my:IconButton ui:field="closeButton" icon="close" addStyleNames="{style.closeButton}"></my:IconButton>
			
			
		</div>
		<g:HTMLPanel addStyleNames="{style.contentPanelStyle}">
		
			<g:HorizontalPanel>
				<r:RichTextToolbar ui:field="messageToolbar"  addStyleNames="{style.toolbar}" />
<!-- 			<div style="margin-bottom: 7px;"> -->
								
					<!-- <g:ListBox ui:field="semesterList"  addStyleNames="{style.buttonStyle}{style.right}" ></g:ListBox>
					<my:IconButton ui:field="loadTemplateButton" icon="open" addStyleNames="{style.buttonStyle}{style.right}" /> -->
				
<!-- 			</div> -->
			</g:HorizontalPanel>

			<div style="-moz-border-radius-bottomleft: 8px;
				-moz-border-radius-bottomright: 8px; 
   				border: 1px solid #AAA;
   				border-radius:10px; 
   				padding: 4px">
				<g:RichTextArea height="250px" ui:field="message" />
			</div>
			<div >
				<my:IconButton ui:field="sendMailButton" icon="arrowreturnthick-1-e" addStyleNames="{style.buttonStyle}" />
				<!-- <my:IconButton ui:field="saveTemplateButton" icon="disk" addStyleNames="{style.buttonStyle}" /> -->
				<my:IconButton ui:field="restoreTemplateButton" icon="arrowreturnthick-1-w" addStyleNames="{style.buttonStyle}" />
			</div>
			<div>
				<h4 style="color: orange;" ui:field="please"></h4>
				<table>
					<tr>
						<td><span ui:field="varTo"></span></td>
						<td><span ui:field="summoningsToName"></span></td>
						
						<td><span ui:field="mailVarStartDate"></span></td>
						<td><span ui:field="mailStartDate"></span></td>
						
						<td><span ui:field="mailVarClosedDate"></span></td>
						<td><span ui:field="mailClosedDate"></span></td>
						
						
					</tr>
					<tr>
						<td><span ui:field="varFrom"></span></td>
						<td><span ui:field="summoningsFromName"></span></td>
						
						<td><span ui:field="mailVarMC"></span></td>
						<td><span ui:field="mailMC"></span></td>
						
						<td><span ui:field="mailVarProposedCount"></span></td>
						<td><span ui:field="mailProposedCount"></span></td>
					</tr>
					<tr>
						<td><span ui:field="varAssignment"></span></td>
						<td><span ui:field="summoningsAssignment"></span></td>
						
						<td><span ui:field="mailVarTotalCount"></span></td>
						<td><span ui:field="mailTotalCount"></span></td>
						
						<td><span ui:field="mailVarLoopStart"></span></td>
						<td><span ui:field="mailLoopStart"></span></td>
					</tr>
					<tr>
						<td><span ui:field="mailVarLoopEnd"></span></td>
						<td><span ui:field="mailLoopEnd"></span></td>
						
						<td><span ui:field="mailVarAllocatedCount"></span></td>
						<td><span ui:field="mailAllocatedCount"></span></td>
						
						<td><span ui:field="mailVarQuestionType"></span></td>
						<td><span ui:field="mailQuestionType"></span></td>
					</tr>
					<tr>
						<td><span ui:field="mailVarSpecialization"></span></td>
						<td><span ui:field="mailSpecialization"></span></td>
						
						<td><span ui:field="mailVarTotalRemaining"></span></td>
						<td><span ui:field="mailTotalRemaining"></span></td>
						
						<td><span ui:field="mailVarTotalRemainingCount"></span></td>
						<td><span ui:field="mailTotalRemainingCount"></span></td>
					</tr>
				</table>
				
				<b><span ui:field="assignmentFormatHead"></span></b><br/>
				<span ui:field="assignmentFormat"></span>
				<br/>
				<h4 style="color: orange;" ui:field="onlyIfExaminer"></h4>

			</div>
		</g:HTMLPanel>

	</g:HTMLPanel>


</ui:UiBinder> 