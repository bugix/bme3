<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:n="urn:import:medizin.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:t="urn:import:medizin.client.ui.richtext"
	xmlns:r="urn:import:medizin.client.ui.view.roo" xmlns:m="urn:import:medizin.client.ui.widget"
	xmlns:i="urn:import:medizin.client.ui.widget.widgetsnewcustomsuggestbox.test.client.ui.widget.suggest.impl"
	xmlns:lbl="urn:import:medizin.client.ui.widget.labeled">
	<ui:style src="../../styles.css" >
		.valueLabel{
			padding-bottom: 7px;
		}
		.digitCount {
			text-align: right;

		}
	</ui:style>
	<ui:with type="medizin.shared.i18n.BmeConstants" field="constants"></ui:with>
	
	<g:HTMLPanel ui:field="panel">
		<div class="{style.controlPanel}">
			<h3 class="{style.header}" style="display:inline">
				<span ui:field="title"></span>
			</h3>
				
			<m:IconButton ui:field="save" icon="disk"></m:IconButton>
			<m:IconButton ui:field="cancel" icon="closethick"></m:IconButton>
			<m:IconButton ui:field="resendToReview" icon="check" text="{constants.resendToReview}" visible="false"></m:IconButton>
		</div>
		
		<div class="{style.attributeGroup}">
			<!-- General / basic attributes -->
			<g:Label styleName="{style.attributeGroupTitle}" ui:field="baseGroupLbl" text="baseGroupLbl"></g:Label>
			
			<lbl:LabeledValueListBox addStyleNames="{style.labeledBox}" ui:field="questionType"></lbl:LabeledValueListBox>
			
			<lbl:LabeledPanel visible="false" ui:field="questionTypeDescription">
				<g:Label ui:field="questionTypeDescriptionText"></g:Label>
			</lbl:LabeledPanel>
			
			<lbl:LabeledTextBox addStyleNames="{style.labeledBox}" ui:field="questionShortName"></lbl:LabeledTextBox>
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="richTextPanel">
				<g:VerticalPanel>
					<t:RichTextToolbar ui:field="toolbar" />
					<g:RichTextArea ui:field='questionTextArea' enabled="false" />
					<g:HTML ui:field="digitCount" styleName="{style.digitCount}"></g:HTML>
				</g:VerticalPanel>
			</lbl:LabeledPanel>
		</div>
		
		<div class="{style.attributeGroup}" id="mediaGroup">
			<g:Label styleName="{style.attributeGroupTitle}" ui:field="mediaLbl" text="mediaLbl"></g:Label>
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="uploadResourcePanel">
				<g:HTMLPanel ui:field="uploaderContainer"></g:HTMLPanel>
			</lbl:LabeledPanel>
			
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="viewerPanel">
				<g:HTMLPanel ui:field="viewerContainer"></g:HTMLPanel>
			</lbl:LabeledPanel>
		</div>

		<div class="{style.attributeGroup}">
			<!-- Autor / Reviewer / area of experties attributes -->
			<g:Label styleName="{style.attributeGroupTitle}" ui:field="reviewLbl" text="reviewLbl"></g:Label>
					
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="authorPanel">
				<i:DefaultSuggestBox ui:field="author"></i:DefaultSuggestBox>
				<g:Label ui:field="lblAuthorValue" visible="false"></g:Label>
			</lbl:LabeledPanel>
			
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="reviewerPanel">
				<i:DefaultSuggestBox ui:field="reviewer"></i:DefaultSuggestBox>
				<g:Label ui:field="lblReviewerValue" visible="false"></g:Label>
			</lbl:LabeledPanel>
			 
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="reviewCommitteePanel">
				<g:CheckBox ui:field="submitToReviewComitee" />
				<g:Label styleName="{style.valueLabel}" ui:field="lblSubmitToReviewComitee" visible="false"></g:Label>
			</lbl:LabeledPanel>
		</div>

		<div class="{style.attributeGroup}">
			<!-- Attributes specific to course / Semester -->
			<g:Label styleName="{style.attributeGroupTitle}" ui:field="organisationalOrderLbl" text="baseGroupLbl"></g:Label>
			
			<lbl:LabeledValueListBox addStyleNames="{style.labeledBox}" ui:field="questionEvent"></lbl:LabeledValueListBox>
			<lbl:LabeledPanel addStyleNames="{style.labeledBox}" ui:field="mcsPanel">
				<r:McSetEditor ui:field="mcs"></r:McSetEditor>
			</lbl:LabeledPanel>
			<!-- <g:VerticalPanel ui:field="containPanel"></g:VerticalPanel> -->
		</div>

		<div class="{style.attributeGroup}">
			<!-- Comments -->
			<g:Label styleName="{style.attributeGroupTitle}" ui:field="commentGroupLbl" text="baseGroupLbl"></g:Label>
			<lbl:LabeledTextArea addStyleNames="{style.labeledBox}" ui:field="comment">
			</lbl:LabeledTextArea>
		</div>

		<div class="{style.controlPanel}">
			<m:IconButton ui:field="save2" icon="disk"></m:IconButton>
			<m:IconButton ui:field="cancel2" icon="closethick"></m:IconButton>
			<m:IconButton ui:field="resendToReview2" icon="check" text="{constants.resendToReview}" visible="false"></m:IconButton>
		</div>		
	</g:HTMLPanel>
</ui:UiBinder> 