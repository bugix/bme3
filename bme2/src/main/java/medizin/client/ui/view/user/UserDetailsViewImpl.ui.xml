<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:n="urn:import:medizin.client.ui"
	xmlns:s="urn:import:medizin.client.ui.view.user">
	
	<ui:with type="medizin.shared.i18n.BmeConstants" field="constants"></ui:with>
	<ui:style src="../../styles.css" />
	
	<g:HTMLPanel>
		<div class="{style.boundary}">
			<table class="{style.details}" cellpadding="0" cellspacing="0">



				<tr>
					<td class="{style.header}">
						<span ui:field="header" />
					</td>
					<td class="{style.bar}">
						<div>
							<g:Button addStyleNames="{style.button}" ui:field="edit">
								<span class="ui-icon ui-icon-pencil" style="float: left; margin-right: 0.3em;"></span>
								Person bearbeiten
							</g:Button>
							<g:Button addStyleNames="{style.button}" ui:field="delete">
								<span class="ui-icon ui-icon-trash" style="float: left; margin-right: 0.3em;"></span>
								Person l√∂schen
							</g:Button>
						</div>
					</td>
				</tr>
				<tr>
					<td colspan="2">
						<table class="{style.fields}" id="boundElementHolder"><!-- <tr id="id"> <td> <span 
								class="{style.label}">Id:</span> </td> <td> <span ui:field="id"/> </td> </tr> 
								<tr id="version"> <td> <span class="{style.label}">Version:</span> </td> 
								<td> <span ui:field="version"/> </td> </tr> -->
							<tr id="name">
								<td>
									<g:Label styleName="{style.label}" text="{constants.name}" ></g:Label>
								</td>
								<td>
									<g:Label ui:field="name" />
								</td>
							</tr>
							<tr id="prename">
								<td>
									<g:Label styleName="{style.label}" text="{constants.prename}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="prename" />
								</td>
							</tr>
							<tr id="email">
								<td>
									<g:Label styleName="{style.label}" text="{constants.email}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="email" />
								</td>
							</tr>
							<tr id="alternativEmail">
								<td>
									<g:Label styleName="{style.label}" text="{constants.alternativeEmail}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="alternativEmail" />
								</td>
							</tr>
							<tr id="phoneNumber">
								<td>
									<g:Label styleName="{style.label}" text="{constants.phoneNo}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="phoneNumber" />
								</td>
							</tr>
							<tr id="isAdmin">
								<td>
									<g:Label styleName="{style.label}" text="{constants.adminRights}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="isAdmin" />
								</td>
							</tr>
							<tr id="isAccepted">
								<td>
									<g:Label styleName="{style.label}" text="{constants.accessRights}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="isAccepted" />
								</td>
							</tr>
							<tr id="isDoctor">
								<td>
									<g:Label styleName="{style.label}" text="{constants.doctorRights}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="isDoctor" />
								</td>
							</tr>
							<tr id="doctorDisplay">
								<td>
									<g:Label styleName="{style.label}" text="{constants.doctor}"></g:Label>
								</td>
								<td>
									<g:Label ui:field="doctorLbl" />
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
			<s:InstituteAccessViewImpl ui:field="instituteAccessView"></s:InstituteAccessViewImpl>
			<s:EventAccessViewImpl ui:field="eventAccessView"></s:EventAccessViewImpl>
			<s:QuestionAccessViewImpl ui:field="questionAccessView"></s:QuestionAccessViewImpl>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 