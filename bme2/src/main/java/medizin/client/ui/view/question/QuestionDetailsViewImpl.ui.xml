<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:n="urn:import:medizin.client.ui"
	xmlns:s="urn:import:medizin.client.ui.view.user" xmlns:m="urn:import:medizin.client.ui.view.question"
	xmlns:medizin="urn:import:medizin.client.ui.widget">
	
	<ui:with type="medizin.shared.i18n.BmeConstants" field="constants"></ui:with>
	<ui:style src="../../styles.css" >
		.rightside {
			float: right;

		}
		.ovreflowStyle {
			height: 300px !important;
			overflow: auto !important;
			width: 100%;
		}
	</ui:style>
		
	<g:HTMLPanel>
		<g:VerticalPanel addStyleNames="{style.tabStyle}">

			<g:HTMLPanel addStyleNames="{style.patientControls}">


				<g:HTMLPanel>
					<div class="{style.controlsright}">
						<h3 class="{style.header}" style="display:inline">
							<span ui:field="displayRenderer"></span>
						</h3>
						<g:HorizontalPanel addStyleNames="{style.rightside}">
							<medizin:IconButton ui:field="previous" icon="seek-prev" text="{constants.previousVersion}"></medizin:IconButton>
							<medizin:IconButton ui:field="latest" icon="seek-end" text="{constants.latestVersion}" enabled="false"></medizin:IconButton>
							<medizin:IconButton ui:field="accept" icon="check" text="{constants.acceptQuestion}" visible="false"></medizin:IconButton>
							<medizin:IconButton ui:field="edit" icon="pencil" text="{constants.edit}"></medizin:IconButton>
							<medizin:IconButton ui:field="delete" icon="trash" text="{constants.delete}"></medizin:IconButton>
						</g:HorizontalPanel>
					</div>
				</g:HTMLPanel>
			</g:HTMLPanel>

			<g:TabPanel ui:field="questionTypeDetailPanel"
				addStyleNames="gwt-InvertedTabPanel" width="100%">

				<g:Tab>
					<g:TabHTML></g:TabHTML>
					<!-- <g:HorizontalPanel > -->
					<g:HTMLPanel addStyleNames="{style.patientDetails}">
						<table class="{style.fields}">
							<tr>
								<td colspan="2">
									<table class="{style.fields}" id="boundElementHolder">

										<tr id="questionShortName">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblQuestionShortName"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblQuestionShortNameValue"></g:Label>
											</td>
										</tr>
										<tr id="questionType">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblQuestionType"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblQuestionTypeValue"></g:Label>
											</td>
										</tr>
										<tr id="questionText">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblQuestionText"></g:Label>
											</td>
											<td>
											<g:HTML ui:field="lblQuestionTextValue"></g:HTML>
												<!-- <g:Label ui:field="lblQuestionTextValue"></g:Label> -->
											</td>
										</tr>
										<tr id="auther">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblAuther"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblAutherValue"></g:Label>
											</td>
										</tr>
										<tr id="reviewer">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblReviewer"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblReviewerValue"></g:Label>
											</td>
										</tr>
										<tr id="questionEvent">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblQuestionEvent"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblQuestionEventValue"></g:Label>
											</td>
										</tr>
										<tr id="comment">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblComment"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblCommentValue"></g:Label>
											</td>
										</tr>
										<tr id="mcs">
											<td>
												<g:Label styleName="{style.label}" ui:field="lblMcs"></g:Label>
											</td>
											<td>
												<g:Label ui:field="lblMcsValue"></g:Label>
											</td>
										</tr>

									</table>
								</td>
							</tr>
						</table>
					</g:HTMLPanel>
				</g:Tab>
				<g:Tab addStyleNames="{style.ovreflowStyle}">
					<g:TabHTML></g:TabHTML>
					<g:VerticalPanel>
						<g:HorizontalPanel ui:field="resourceUploadPanel">
						</g:HorizontalPanel>
						<g:HorizontalPanel ui:field="resourceViewPanel">
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:Tab>
			</g:TabPanel>
		<m:AnswerListViewImpl ui:field="answerListViewImpl"></m:AnswerListViewImpl> 
		<m:MatrixAnswerListViewImpl ui:field="matrixAnswerListViewImpl"></m:MatrixAnswerListViewImpl>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>


